name: Build and Deploy Hugo Site

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:  # 允许手动触发

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Hugo
        uses: peaceiris/actions-hugo@v2
        with:
          hugo-version: 'latest'
          extended: true

      - name: Create Basic Config if Missing
        run: |
          if [ ! -f config.toml ] && [ ! -f config.yaml ] && [ ! -f config.json ]; then
            echo "Creating a basic config.toml file..."
            cat > config.toml << 'EOF'
            baseURL = 'https://jwj330.github.io/'
            languageCode = 'en-us'
            title = 'My Hugo Site'
            theme = 'ananke'
            EOF
          else
            echo "Config file exists. Skipping creation."
          fi

      - name: Build Site
        run: hugo --minify

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          deploy_key: ${{ secrets.DEPLOY_KEY }}
          external_repository: jwj330/jwj330.github.io
          publish_branch: main
          publish_dir: ./public
          commit_message: ${{ github.event.head_commit.message }}
